#!/bin/bash

############################################################################
#
#	Этот скрипт создаёт из выделенных файлов папку.
#
#	Скрипту передаётся единственный параметр, который содержит
#	в себе и имена файлов и папок, и имя текущего каталога, в
#	котором лежат выделенные файлы/папки.
#
############################################################################

DIR=$(dirname "$1") #получаем имя текущего каталога
BASENAME=$(basename "$1") #получаем именафайлов и папок

cd $DIR
mkdir Папка
cp -R $BASENAME $DIR/Папка

