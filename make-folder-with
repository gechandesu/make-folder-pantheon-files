#!/bin/bash

############################################################################
#
#	Этот скрипт создаёт из выделенных файлов папку.
#
#	Скрипту передаётся единственный параметр - полный путь до файла.
#
############################################################################

DIR=$(dirname "$1") #получаем имя текущего каталога
BASENAME=$(basename "$1") #получаем именафайлов и папок

cd "$DIR" || return
mkdir Folder
mv "$BASENAME" "$DIR"/Folder
